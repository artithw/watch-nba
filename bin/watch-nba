#!/usr/bin/env node

const { argv } = require('yargs');
const axios = require('axios');
const isToday = require('date-fns/is_today');
const isBefore = require('date-fns/is_before');
const isAsyncSupported = require('is-async-supported');

if (!isAsyncSupported()) {
  require('async-to-gen/register');
}

const { watchGame } = require('../src');

axios
  .get('http://data.nba.net/data/10s/prod/v1/2017/schedule.json')
  .then(({ data }) =>
    data.league.standard.filter(game => isToday(new Date(game.startTimeUTC)))
  )
  .then(games => {
    if (games.length < 1) {
      console.log('There is no game playing today.');
      return;
    }

    const [game] = games;
    if (isBefore(new Date(), new Date(game.startTimeUTC))) {
      console.log(
        `Game ${game.gameUrlCode} will start at ${game.startTimeUTC}.`
      );
    } else {
      return watchGame(game.gameUrlCode, 5000);
    }
  })
  .catch(err => {
    if (err.message === "Cannot set property '0' of undefined") {
      console.log('Please keep enough terminal width to watch NBA!');
      process.exit(1);
    }
  });
